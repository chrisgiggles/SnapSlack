.ChatView {
  height: 100%;

  .main {
    .make-md-column(9);
    .make-lg-column(10);
    height:100%;
    overflow: hidden;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    height: 600px;
    overflow-y: scroll;
  }

  li {
    padding: 20px 0;
    border-bottom: 1px solid @divider;
  }

  .avatar {
    display: inline-block;
    margin-right: 20px;
  }

  .message {
    display: inline-block;
  }

  .meta {
    font-size: @font-size-sm;
  }

  .textÂ {
    font-size: @font-size-lg;
    margin: 0;
  }
}